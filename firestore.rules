rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function hasRole(role) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null && userDoc.data.role == role;
    }
    
    function hasProfile() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);

      // Requests subcollection (Foodbank requests)
      match /requests/{requestId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && hasRole('foodbank');
        allow update: if isSignedIn() && (isOwner(userId) || hasRole('foodbank'));
        allow delete: if isSignedIn() && hasRole('foodbank');
      }
    }

    // Donations collection
    match /donations/{donationId} {
      allow read: if true;
      // Allow create if signed in AND:
      // 1. Has donor role, OR
      // 2. Is creating donation for themselves (donorId matches auth.uid), OR
      // 3. Is authenticated (fallback for testing)
      allow create: if isSignedIn() && 
        (hasRole('donor') || 
         request.resource.data.donorId == request.auth.uid ||
         !hasProfile()); // Allow if profile doesn't exist yet (will be created)
      allow update: if isSignedIn() && 
        (resource.data.donorId == request.auth.uid || hasRole('volunteer') || hasRole('foodbank'));
      allow delete: if isSignedIn() && resource.data.donorId == request.auth.uid;
    }

    // Requests collection (Urgent needs)
    match /requests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && hasRole('foodbank');
      allow update: if isSignedIn() && (resource.data.foodBankId == request.auth.uid || hasRole('donor'));
      allow delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Routes/Deliveries collection
    match /routes/{routeId} {
      allow read: if isSignedIn() && (resource.data.volunteerId == request.auth.uid || hasRole('foodbank'));
      allow create: if isSignedIn() && hasRole('volunteer'); // Or system generated
      allow update: if isSignedIn() && (resource.data.volunteerId == request.auth.uid);
    }

    // Inventory collection
    match /inventory/{itemId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && hasRole('foodbank');
    }
  }
}