rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Donations collection
    match /donations/{donationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && hasRole('donor');
      allow update: if isSignedIn() && (resource.data.donorId == request.auth.uid || hasRole('volunteer') || hasRole('foodbank'));
      allow delete: if isSignedIn() && resource.data.donorId == request.auth.uid;
    }

    // Requests collection (Urgent needs)
    match /requests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && hasRole('foodbank');
      allow update: if isSignedIn() && (resource.data.foodBankId == request.auth.uid || hasRole('donor'));
      allow delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Routes/Deliveries collection
    match /routes/{routeId} {
      allow read: if isSignedIn() && (resource.data.volunteerId == request.auth.uid || hasRole('foodbank'));
      allow create: if isSignedIn() && hasRole('volunteer'); // Or system generated
      allow update: if isSignedIn() && (resource.data.volunteerId == request.auth.uid);
    }

    // Inventory collection
    match /inventory/{itemId} {
      // Allow users to read/write their own inventory items
      // Read allowed for all authenticated users (query filtering happens client-side)
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (request.resource.data.foodBankId == request.auth.uid);
      allow update, delete: if isSignedIn() && (resource.data.foodBankId == request.auth.uid);
    }
  }
}
