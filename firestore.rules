rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function hasRole(role) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null && userDoc.data.role == role;
    }
    
    function hasProfile() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null;
    }

    // Users collection
    match /users/{userId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);

      // Requests subcollection (Foodbank requests)
      match /requests/{requestId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && hasRole('foodbank');
        allow update: if isSignedIn() && (isOwner(userId) || hasRole('foodbank'));
        allow delete: if isSignedIn() && hasRole('foodbank');
      }
    }

    // Donations collection
    match /donations/{donationId} {
      allow get, list: if true;
      // Allow create if signed in AND:
      // 1. Has donor role, OR
      // 2. Is creating donation for themselves (donorId matches auth.uid), OR
      // 3. Is authenticated (fallback for testing)
      allow create: if isSignedIn() && 
        (hasRole('donor') || 
         request.resource.data.donorId == request.auth.uid ||
         !hasProfile()); // Allow if profile doesn't exist yet (will be created)
      allow update: if isSignedIn() && 
        (resource.data.donorId == request.auth.uid || hasRole('volunteer') || hasRole('foodbank'));
      allow delete: if isSignedIn() && (resource.data.donorId == request.auth.uid || hasRole('volunteer'));
    }

    // Saved Recipes collection
    match /saved_recipes/{recipeId} {
      allow create: if isSignedIn() && request.resource.data.foodBankId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Requests collection (Urgent needs)
    match /requests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && hasRole('foodbank');
      allow update: if isSignedIn() && (
        resource.data.foodBankId == request.auth.uid || 
        hasRole('donor') ||
        (request.resource.data.status == 'accepted' && request.resource.data.acceptedBy == request.auth.uid)
      );
      allow delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Routes/Deliveries collection
    match /routes/{routeId} {
      allow read: if isSignedIn() && (resource.data.volunteerId == request.auth.uid || hasRole('foodbank'));
      allow create: if isSignedIn() && hasRole('volunteer'); // Or system generated
      allow update: if isSignedIn() && (resource.data.volunteerId == request.auth.uid);
    }

    // Inventory collection
    match /inventory/{itemId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.foodBankId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Chat memories collection used by logistics copilot
    match /chat_memories/{memoryId} {
      allow create: if isSignedIn() && request.resource.data.foodBankId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Distribution sessions collection
    match /distributions/{sessionId} {
      allow read: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.foodBankId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
    }

    // Distribution logs collection (audit trail)
    match /distribution_logs/{logId} {
      allow read: if isSignedIn() && resource.data.foodBankId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.foodBankId == request.auth.uid;
      // Logs should not be updated or deleted for audit integrity
      allow update, delete: if false;
    }

    // This allows any signed-in user to manage the volunteers list.
    match /volunteers/{volunteerId} {
      allow read, write: if isSignedIn();
    }
  }
}
